<div class="container">
  <h4>{{model.author}} asked:</h4>
  <p>{{model.text}}</p>
  <p>{{model.details}}</p>
</div>
{{edit-question question=model update="updateQuestion"}}
{{new-answer question=model save="saveAnswer"}}


<ul>
  {{#each model.answers as |answer|}}
    <li>{{answer.text}} -{{answer.author}}</li>
  {{/each}}
</ul>
