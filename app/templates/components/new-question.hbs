{{#if show}}
  <h1>Ask your Question:</h1>
  <div>
    <form>
     <div class="form-group">
       <label for="author">Name:</label>
       {{input value=author id="author" class="form-control"}}
     </div>

     <div class="form-group">
       <label for="text">Question:</label>
       {{textarea value=text id="text" class="form-control" rows="10"}}
     </div>

     <div class="form-group">
       <label for="details">Details:</label>
       {{textarea value=details id="details" class="form-control" rows="5"}}
     </div>

     <button class="btn btn-info" {{action 'save'}}>Save</button>
    </form>
  </div>
{{else}}
  <button{{action 'showForm'}} class="btn">Ask New Question</button>
{{/if}}
